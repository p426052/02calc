<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CDA3D5"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="My first Calculator"
            android:textColor="#DF3600"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9E6FD"
            android:ems="10"
            android:inputType="textPersonName|numberDecimal"
            android:lines="2"
            android:maxLines="2"
            android:textColor="#417800"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#F9D9FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEditText">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FBE5FF">

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="C"
                    android:textColor="#D3D3D3"
                    android:textSize="35sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="7"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="8"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="9"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="/"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="4"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="5"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="6"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnMul"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="*"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="1"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="2"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="3"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnSub"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="-"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnPoint"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text=","
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="0"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnEq"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="="
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="6dp"
                    android:background="#640075"
                    android:backgroundTint="#640075"
                    android:text="+"
                    android:textColor="#D3D3D3"
                    android:textSize="30sp" />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>